#!/bin/bash

GIT_SOURCE_HOME="$(dirname $(readlink -f $(which git)))/../etc/bash_completion.d"
GIT_PROMPT_FILE="/usr/lib/git-core/git-sh-prompt"

if [ -f "$GIT_PROMPT_FILE" ]
then
    source "$GIT_PROMPT_FILE"
else
    if ! hash __git_ps1 > /dev/null 2>&1
    then
        function __git_ps1 {
            return
        }
        echo "Error: git prompt file not found."
    fi
fi

GIT_PS1_SHOWDIRTYSTATE=0
