#!/bin/bash

# Define the variable depending on which host I am on, i.e. when
# on my laptop, the init style should be the active one,
# otherwise - inactive.
if [ $HELLO_ITS_ME ]
then
    export TMUX_INIT_STYLE="$HOME/.tmux/styles-active.conf"
else
    export TMUX_INIT_STYLE="$HOME/.tmux/styles-inactive.conf"
fi
